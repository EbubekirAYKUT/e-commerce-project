@model string
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/_AdminLayout.cshtml";
}

<div class="bg-primary text-white p-1 m-1">
    <h2>Create Role</h2>
</div>

<div class="container">
    <div id="signupbox" style="margin-top:50px;" class="mainbox col-md-6">
        <div class="panel panel-info">
            <div class="panel-heading">
                <div class="panel-title">Create Role</div>

            </div>
            <div class="panel-body">
                <form asp-controller="Account" asp-action="CreateRole" method="post" class="form-horizontal" role="form">
                    <div class="text-danger" asp-validation-summary="All"></div>
                    <div class="form-group">
                        <label form="name">Role Name</label>
                        <div class="col-md-9">
                            <input name="name" class="form-control" placeholder="Role Name">                           
                        </div>
                    </div>
                                        
                    <div class="form-group">

                        <div class="col-md-offset-3 col-md-9">
                            <input type="submit" class="btn btn-info" value="Submit"><i class="icon-hand-right"></i>
                            <a asp-action="RoleIndex" asp-controller="Account" class="btn btn-danger">Cancel</a>
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

