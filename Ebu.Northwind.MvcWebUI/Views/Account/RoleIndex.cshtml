@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewData["Title"] = "Role Index";
    Layout = "~/Views/_AdminLayout.cshtml";
}

<div class="bg-primary text-white p-1 m-1">
    <h2>Role List</h2>
</div>

<div class="text-center" asp-validation-summary="ModelOnly"></div>

<table class="table table-striped table-sm p-1 m-1">
    <tr>
        <th>Role Id</th>
        <th>Role Name</th>
        <th>Users</th>
        <th></th>
    </tr>

    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="4" class="text-center">
                No Roles
            </td>
        </tr>

    }
    else
    {
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td identity-role="@role.Id"></td>
                <td>
                    <form asp-action="DeleteRole" asp-controller="Account" asp-route-id="@role.Id" method="post">
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <a asp-action="EditRole" asp-controller="Account" asp-route-id="@role.Id" class="btn btn-primary">Edit</a>
                    </form>
                </td>
            </tr>
        }

    }
</table>

<a asp-action="CreateRole" asp-controller="Account" class="btn btn-primary">
    Create Role
</a>

