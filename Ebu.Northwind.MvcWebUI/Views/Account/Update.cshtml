@model Ebu.Northwind.MvcWebUI.Entities.ApplicationUser
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/_AdminLayout.cshtml";
}

@*<div class="bg-primary text-white p-1 m-1">
    <h2>Update User</h2>
</div>*@

<div class="container">
    <div id="signupbox" style="margin-top:50px;" class="mainbox col-md-6">
        <div class="panel panel-info">
            <div class="panel-heading">
                <div class="panel-title">Update</div>
                
            </div>
            <div class="panel-body">
                <form asp-controller="Account" asp-action="Update" method="post" class="form-horizontal" role="form">
                    <div class="text-danger" asp-validation-summary="All"></div>
                    <div class="form-group">
                        <label asp-for="Id" class="col-md-3 control-label"></label>
                        <div class="col-md-9">
                            <input asp-for="Id" type="text" class="form-control" placeholder="User Name" disabled>
                            
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="Password" class="col-md-3 control-label"></label>
                        <div class="col-md-9">
                            Password
                            <input name="Password" class="form-control" placeholder="Password">
                            
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="Email" class="col-md-3 control-label"></label>
                        <div class="col-md-9">
                            <input asp-for="Email" class="form-control" placeholder="Email Address">
                            <span asp-validation-for="Email"></span>
                        </div>
                    </div>

                    <div class="form-group">

                        <div class="col-md-offset-3 col-md-9">
                            <input type="submit" class="btn btn-info" value="Submit"><i class="icon-hand-right"></i>
                            <a asp-action="Index" asp-controller="Account" class="btn btn-danger">Cancel</a>
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
