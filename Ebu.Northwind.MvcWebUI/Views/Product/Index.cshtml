@model Ebu.Northwind.MvcWebUI.Models.ProductListViewModel
@{
    Layout = "~/Views/_Layout.cshtml";
}

<!DOCTYPE html>


    <table class="table table-responsive">
        <thead>
            <tr>
                <td>Name</td>
                <td>Unit Price</td>
                <td>Unit In Stock</td>
                <td></td>
                
            </tr>
            @foreach (var item in Model.Products)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.UnitPrice</td>
                    <td>@item.UnitInStock</td>
                    <td><a class="btn btn-xs btn-success" asp-controller="Cart" asp-action="AddToCart" asp-route-ProductId="@item.ProductId">add to cart</a></td>
                    
                </tr>
            }

        </thead>
    </table>
    <nav aria-label="Page navigation">
        <product-list-pager current-category="@Model.CurrentCategory"
                            current-page="@Model.CurrentPage"
                            page-count="@Model.PageCount"
                            page-size="@Model.PageSize">

        </product-list-pager>
    </nav>
